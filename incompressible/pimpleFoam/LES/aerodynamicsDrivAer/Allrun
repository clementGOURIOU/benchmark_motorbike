#!/bin/sh
cd "${0%/*}" || exit                                # Run from this directory
. ${WM_PROJECT_DIR:?}/bin/tools/RunFunctions        # Tutorial run functions
#------------------------------------------------------------------------------

#cp -f \
#    "$FOAM_TUTORIALS"/resources/geometry/I9_aerodynamics_DrivAer/* \
#    aerodynamicsDrivAer/constant/triSurface

# Do the Spalart-Allmaras steady-state case
(cd aerodynamicsDrivAer && foamRunTutorials)

if notTest "$@"
then
    # Clone the steady-state case to the LES case
    cloneParallelCase aerodynamicsDrivAer aerodynamicsDrivAerLES

    # Do the LES case
    cp -f lesFiles/Allrun aerodynamicsDrivAerLES/

    (cd aerodynamicsDrivAerLES && foamRunTutorials)
fi

#------------------------------------------------------------------------------
