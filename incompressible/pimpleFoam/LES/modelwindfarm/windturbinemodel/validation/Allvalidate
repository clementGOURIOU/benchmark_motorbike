#!/bin/sh

# Require gnuplot
command -v gnuplot >/dev/null || {
    echo "FOAM FATAL ERROR: gnuplot not found - skipping graph creation" 1>&2
    exit 1
}

pPFolder="../postProcessing/lines/10"

#- U
for i in initial 2D 3D 5D 7D 10D 14D 20D
do
gnuplot<<EOF
    set terminal pngcairo
    set output "Line_U_${i}.png"
    set title  "Wind Turbine U ${i}" font "Helvetica,24"
    set xlabel "U/U_{hub} [-]" font "Helvetica,24"
    set ylabel "height/D [-]" font "Helvetica,24"
    set key right top
    set xrange [0.25:1.25]
    plot \
        "data/Data_U_${i}.txt" u (\$1/2.2):2 t "Wu 2013" with points lt 1 pt 6 ps 1.5,\
        "$pPFolder/line_${i}_U_UMean_UPrime2Mean.xy" u (\$5/2.2):(\$1/0.15) with lines title "simulation" lt 1
EOF
done

#- TI
for i in initial 2D 3D 5D 7D 10D 14D 20D
do
gnuplot<<EOF
    set terminal pngcairo
    set output "Line_TI_${i}.png"
    set title  "Wind Turbine TI ${i}" font "Helvetica,24"
    set xlabel "U_{rms}/U_{hub} [-]" font "Helvetica,24"
    set ylabel "height/D [-]" font "Helvetica,24"
    set key right top
    set xrange [0:0.25]
    plot \
        "data/Data_TI_${i}.txt" u 1:2 t "Wu 2013" with points lt 1 pt 6 ps 1.5,\
        "$pPFolder/line_${i}_U_UMean_UPrime2Mean.xy" u (sqrt(\$8)/2.2):(\$1/0.15) with lines title "simulation" lt 1
EOF
done

#------------------------------------------------------------------------------

