FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "${FOAM_CASE}/constant/caseSettings"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $:intFields.T;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            fixedValue;
        value           uniform $../../inlet/T;
    }

    // pilot, closed or open
    fuelInlet
    {
        type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient;
    }

    DLRCJH
    {
        type            zeroGradient;
    }
}

