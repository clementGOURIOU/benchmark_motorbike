FoamFile
{
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

actions
(
    // Example:pick up internal faces on outside of cellSet
    // ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

    // Load initial cellSet
    {
        name    baseFace;
        action  new;
        type    faceSet;
        source  patchToFace;
        sourceInfo
        {
            patch   "baseFront";
        }
    }

    {
        name    extrusionFuel;
        action  new;
        type    faceSet;
        source  faceToFace;
        sourceInfo
        {
            set baseFace;
        }
    }

    {
        name    extrusionFuel;
        action  subset;
        type    faceSet;
        source  boxToFace;
        sourceInfo
        {
            box  (-0.001 0.018 -0.034) (0.001 0.046 0.034);
        }
    }

    {
        name    extrusionAir;
        action  new;
        type    faceSet;
        source  faceToFace;
        sourceInfo
        {
            set baseFace;
        }
    }

    {
        name    extrusionAir;
        action  subset;
        type    faceSet;
        source  boxToFace;
        sourceInfo
        {
            box  (-0.001 -0.032 -0.022) (0.001 0.012 0.022);
        }
    }

);

