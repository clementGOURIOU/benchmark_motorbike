FoamFile
{
    format      ascii;
    class       volScalarField;
    object      N2;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "${FOAM_CASE}/constant/caseSettings"

N2val  #calc "1 - $:inlet.O2 - $:inlet.CH4";
N2valP  #calc "1 - $:pilots.O2 - $:pilots.CH4";

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0.77;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            fixedValue;
        value           uniform $N2val;
    }

    // pilot, closed or open 
    fuelInlet
    {
        type            fixedValue;
        value           uniform $N2valP;
    }

    outlet
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    DLRCJH
    {
        type            zeroGradient;
    }
}

// ************************************************************************* //
