FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      reactions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
species
(
    O2
    H2O
    CH4
    CO2
    N2
);

reactions
{
    methaneReaction
    {
        type         irreversibleinfiniteReaction;
        reaction     "CH4 + 2O2 + 7.5N2 = CO2 + 2H2O + 7.5N2";
    }
}
