FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

// calculate omega value at inlet
kref            #eval{ 1.5*sqr($Uref*$Tu) };
nutref          #eval{ $viscRatio * $muref / $rhoref };
omegaref        #eval{ $kref/$nutref };

dimensions      [0 0 -1 0 0 0 0];
internalField   uniform $omegaref;

boundaryField
{
    "(ff_xMin|ff_yMin)"
    {
        type            fixedValue;
        value           $internalField;
    }

    "(ff_xMax|ff_yMax)"
    {
        type            zeroGradient;
    }

    "ww_.*"
    {
        type            omegaWallFunction;
        value           $internalField;
    }

    #include            "include/spanwisePatches"
}

// ************************************************************************* //
