FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

// calculate inflow velocity vector and initial field
Ux              #eval{ $Uref*cos(degToRad($AoA)) };
Uy              #eval{ $Uref*sin(degToRad($AoA)) };

dimensions      [0 1 -1 0 0 0 0];
internalField   uniform ($Ux $Uy 0);

boundaryField
{
    "(ff_xMin|ff_yMin)"
    {
        type            fixedValue;
        value           $internalField;
    }

    "(ff_xMax|ff_yMax)"
    {
        type            zeroGradient;
    }

    "ww_.*"
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    #include            "include/spanwisePatches"
}

// ************************************************************************* //
