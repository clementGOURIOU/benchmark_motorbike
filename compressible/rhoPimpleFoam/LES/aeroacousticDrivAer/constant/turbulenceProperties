FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      turbulenceProperties;
}
simulationType  LES;

RAS
{
    RASModel        SpalartAllmaras;
    turbulence      on;
    printCoeffs     on;
}

LES
{
    LESModel        SpalartAllmarasIDDES;
    turbulence      on;
    printCoeffs     on;
    delta           IDDESDelta;
    ft2             true;
    IDDESDeltaCoeffs
    {
        Cw              0.15;
        deltaCoeff      1;
        hmax            maxDeltaxyzCubeRoot;
        maxDeltaxyzCubeRootCoeffs
        {
            maxDeltaxyzCoeffs
            {
                deltaCoeff      2;
            }
            cubeRootVolCoeffs
            {
                deltaCoeff      1;
            }
        }
    }
}

