  cuttingPlane
  {
      type            surfaces;
      libs            ("libsampling.so");
      writeControl    writeTime;
      writeInterval   1;

      surfaceFormat   ensight;
      formatOptions
      {
        ensight { format binary; collateTimes true;}
      }
      fields          (p U);

      interpolationScheme cellPoint;

      surfaces
      (
          yNormal_0
          {
              type            cuttingPlane;
              planeType       pointAndNormal;
              pointAndNormalDict
              {
                  point           (0 0.0 0);
                  normal          (0 1 0);
              }
              interpolate     false;
              triangulate     false;
          }
      );
  }
