  cuttingPlane
  {
      type            surfaces;
      libs            ("libsampling.so");
      writeControl    timeStep;
      writeInterval   100;

      surfaceFormat   ensight;
      formatOptions
      {
        ensight { format binary; collateTimes true;}
      }
      fields          (pMean);

      interpolationScheme cellPoint;

      surfaces
      (
          yNormal_0
          {
              type            cuttingPlane;
              planeType       pointAndNormal;
              pointAndNormalDict
              {
                  point         (0 0.0 0);
                  normal        (0 1 0);
              }
              interpolate     	false;
              triangulate     	false;
              mergeTol          1.0e-12;
          }
      );
  }

