FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alphat;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

dimensions      [1 -1 -1 0 0 0 0];
internalField   uniform $alphat;

boundaryField
{
    "ff.*"  
    {   
        type            calculated;
        value           $internalField;
    }

    "ww_.*"
    {
        type            compressible::alphatWallFunction;
        value           $internalField;
    }

    #include            "include/spanwisePatches"
}

