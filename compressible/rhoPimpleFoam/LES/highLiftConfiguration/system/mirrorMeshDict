FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      mirrorMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

planeType       pointAndNormal;

pointAndNormalDict
{
    point           ( 0 0 #eval{ (-1.)*$Lspan*$Lchord/2.0 } ); 
    normal          ( 0 0 #eval{ (-1.)*$Lspan }             ); 
}

planeTolerance      1e-6;

