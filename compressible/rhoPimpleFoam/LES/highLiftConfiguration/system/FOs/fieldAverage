fieldAverage
{
    type            fieldAverage;
    libs            ("libfieldFunctionObjects.so");

    enabled         true;
    writeControl    writeTime;

    fields
    (
        U
        {
            mean            on;
            prime2Mean      on;
            base            time;
        }
        p
        {
            mean            on;
            prime2Mean      on;
            base            time;
        }
        nut
        {
            mean            on;
            prime2Mean      off;
            base            time;
        }
        wallShearStress
        {
            mean            on;
            prime2Mean      off;
            base            time;
        }
    );
}

