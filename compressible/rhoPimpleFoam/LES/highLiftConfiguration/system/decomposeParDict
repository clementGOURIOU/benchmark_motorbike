FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "${FOAM_CASE}/system/include/caseDefinition"

numberOfSubdomains $nCores;
method             scotch;

constraints
{
    //- Keep owner and neighbour on same processor for faces in zones
    type    preserveFaceZones;
    zones   (ff_zMin ff_zMax);
}

