FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains  #eval {$nCPU};

method              ptscotch;

simpleCoeffs
{
    n   (1 1 1);
    delta   0.001;
}

hierarchicalCoeffs
{
    n   (1 1 1);
    delta   0.001;
    order   xyz;
}

distributed no;
roots       ();

